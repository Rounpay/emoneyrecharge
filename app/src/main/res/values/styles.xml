    <style name="AppMaterialUPITheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="colorOnSecondary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">sans-serif-condensed-medium</item>
        <item name="android:textAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="textInputStyle">@style/UPITxtInputTheme</item>
        <item name="materialButtonStyle">@style/MaterialButton</item>

    </style>
    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="MaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/rect_primary_dark_fill_white_border</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">?attr/colorSecondary</item>
        <item name="cardForegroundColor">@color/card_foreground_color</item>
        <item name="checkedIconTint">?attr/colorPrimary</item>
        <item name="strokeColor">@android:color/transparent</item>
        <item name="rippleColor">@color/card_ripple_color</item>
        <item name="shapeAppearance">?attr/shapeAppearanceMediumComponent</item>
        <item name="cardElevation">@dimen/_4sdp</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="AppTextField" parent="Widget.Design.TextInputLayout">
        <item name="hintEnabled">true</item>
        <item name="hintTextColor">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <item name="errorTextAppearance">@style/AppShapeAppearance.MediumComponent</item>
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextColor">@color/green</item>
        <item name="helperTextTextAppearance">@style/AppShapeAppearance.MediumComponent</item>
        <item name="errorEnabled">true</item>
        <item name="errorTextColor">@color/red</item>
        <item name="endIconMode">clear_text</item>
        <item name="endIconTint">@color/colorPrimaryDark</item>

    </style>

    <style name="txtInputTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="textInputStyle">@style/textInputCommonStyle</item>
        <item name="cornerFamily">cut</item>
        <item name="cornerRadius">@dimen/_15sdp</item>
        <item name="startIconDrawable">@drawable/ic_number</item>

    </style>

    <style name="textInputCommonStyle" parent="">
        <item name="hintTextColor">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="helperTextTextColor">@color/green</item>
        <item name="helperTextTextAppearance">@style/AppShapeAppearance.MediumComponent</item>
        <item name="errorEnabled">true</item>
        <item name="errorTextColor">@color/red</item>
        <item name="boxStrokeErrorColor">@color/red</item>
        <item name="endIconMode">clear_text</item>
        <item name="endIconTint">@color/colorPrimaryDark</item>
        <item name="errorTextAppearance">@style/AppShapeAppearance.MediumComponent</item>
        <item name="startIconTint">@color/colorAccent</item>
        <item name="boxStrokeWidth">@dimen/_2sdp</item>
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
    </style>

    <style name="UPITxtInputTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="textInputStyle">@style/textInputCommonStyle</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">100dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_10sdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_10sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_10sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_10sdp</item>

    </style>


    <style name="txtInputDropDownTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="hintTextColor">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="helperTextTextColor">@color/green</item>
        <item name="helperTextTextAppearance">@style/AppShapeAppearance.MediumComponent</item>
        <item name="errorTextAppearance">@style/AppShapeAppearance.MediumComponent</item>
        <item name="errorEnabled">true</item>
        <item name="errorTextColor">@color/red</item>
        <item name="boxStrokeErrorColor">@color/red</item>
        <item name="endIconMode">dropdown_menu</item>
        <item name="endIconTint">@color/colorAccent</item>
        <item name="cornerFamily">cut</item>
        <item name="cornerRadius">@dimen/_15sdp</item>
        <item name="boxStrokeWidth">@dimen/_1sdp</item>
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="startIconDrawable">@drawable/ic_number</item>
        <item name="startIconTint">@color/colorAccent</item>

        <!--<item name="materialThemeOverlay">@style/Theme.MyApp.Spinner.ThemeOverlay</item>-->
    </style>
    <style name="Theme.MyApp.Spinner.ThemeOverlay" parent="">
        <!-- Style inception - hook into styling the AutoCompleteTextView -->
        <item name="autoCompleteTextViewStyle">@style/Widget.MyApp.Spinner.ThemeOverlay.AutoCompleteTextView</item>
        <!-- Background color of dropdown (popup) entries -->
        <item name="colorSurface">@color/colorPrimary</item>
        <!-- Dropdown arrow color -->
        <item name="colorOnSurface">@color/pressed</item>
    </style>

    <!-- Text (NOT the popup) of the child AutoCompleteTextView of our material spinner -->
    <style name="Widget.MyApp.Spinner.ThemeOverlay.AutoCompleteTextView" parent="Widget.AppCompat.AutoCompleteTextView">
        <!--
        Another nasty little bug. Our main spinner style inherits from material
        TextInputLayout.OutlinedBox.ExposedDropdownMenu, which means we want the
        spinner to have an outline. But this won't work unless we manually FORCE
        a null background on the child AutoCompleteTextView.
        https://github.com/material-components/material-components-android/issues/1989
        -->
        <item name="android:background">@null</item>
        <!-- Restore padding to sanity -->
        <item name="android:padding">16dp</item>
        <!-- Color of selected item -->
        <item name="android:textColor">@color/pressed</item>
        <!-- Text size of selected item -->
        <item name="android:textSize">20sp</item>
    </style>
    <!-- Material spinner 'item' layout style -->
    <style name="Widget.MyApp.SpinnerItem" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/pressed</item>
        <item name="android:textSize">20sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">16dp</item>
    </style>
    <style name="MaterialAppButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:background">@drawable/btn_enable_disable</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
        <item name="iconGravity">textStart</item>
        <item name="boxStrokeColor">@color/white</item>
        <item name="boxStrokeWidth">@dimen/_1sdp</item>
    </style>

    <style name="AppShapeAppearance.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">6dp</item>
        <item name="android:textSize">@dimen/_9sdp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
    </style>

    <style name="AppShapeAppearance.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">8dp</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textStyle">bold</item>
