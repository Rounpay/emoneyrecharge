<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false" >
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_10sdp"/>
            <solid android:color="@color/button_disable_color" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="true">
        <layer-list>
            <item>
                <shape
                    android:shape="rectangle">
                    <stroke android:width="@dimen/_1sdp" android:color="@color/colorAccent"/>
                    <gradient android:type="linear"
                        android:centerX="25%"
                        android:centerY="25%"
                        android:startColor="@color/start_color"
                        android:endColor="@color/end_color"
                        android:angle="45"/>
                    <corners android:radius="@dimen/_10sdp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item >

        <layer-list>
            <item>
                <shape
                    android:shape="rectangle">
                    <stroke android:width="@dimen/_1sdp" android:color="@color/colorAccent"/>
                    <gradient
                        android:type="linear"
                        android:centerX="25%"
                        android:centerY="25%"
                        android:startColor="@color/start_color"
                        android:endColor="@color/end_color"
                        android:angle="360"/>
                    <corners android:radius="@dimen/_10sdp"/>
                </shape>
            </item>
        </layer-list>

    </item>
</selector>