<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_second" />
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomBtnView"
        android:layout_below="@+id/appBarLayout">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:text="Name :"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_12sdp" />

            <EditText
                android:id="@+id/nameEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="Enter Name"
                android:padding="@dimen/_10sdp"
                android:singleLine="true"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:text="Outlet Name :"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_12sdp" />

            <EditText
                android:id="@+id/outletNameEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="Enter Outlet Name"
                android:padding="@dimen/_10sdp"
                android:singleLine="true"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:text="Mobile Number :"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_12sdp" />

            <EditText
                android:id="@+id/MobileNumberEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="Enter Mobile Number"
                android:padding="@dimen/_10sdp"
                android:singleLine="true"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:text="Alternate Mobile Number :"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_12sdp" />

            <EditText
                android:id="@+id/AlternateMobileNumberEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="Enter Alternate Mobile Number"
                android:padding="@dimen/_10sdp"
                android:singleLine="true"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:text="Email Id :"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_12sdp" />

            <EditText
                android:id="@+id/emailIdEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="Enter Email Id"
                android:inputType="textEmailAddress"
                android:padding="@dimen/_10sdp"
                android:singleLine="true"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:text="Pincode :"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_12sdp" />

            <EditText
                android:id="@+id/pincodeEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="Enter Pincode"
                android:inputType="number"
                android:maxLength="6"
                android:padding="@dimen/_10sdp"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:text="Commission Rate :"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_12sdp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/commRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:inputType="number"
                android:singleLine="true"
                android:text=""
                android:textSize="@dimen/_12sdp"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:text="Address :"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_12sdp" />

            <EditText
                android:id="@+id/addressEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle"
                android:gravity="center_vertical"
                android:hint="Enter Address"
                android:padding="@dimen/_10sdp"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:text="GSTIN :"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_12sdp" />

            <EditText
                android:id="@+id/gstinEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle"
                android:gravity="center_vertical"
                android:hint="Enter GSTIN"
                android:padding="@dimen/_10sdp"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:text="AADHAR :"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_12sdp" />

            <EditText
                android:id="@+id/aadharEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle"
                android:gravity="center_vertical"
                android:hint="Enter AADHAR"
                android:inputType="number"
                android:padding="@dimen/_10sdp"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:text="PAN :"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_12sdp" />

            <EditText
                android:id="@+id/panEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle"
                android:gravity="center_vertical"
                android:hint="Enter PAN"
                android:inputType="textCapCharacters"
                android:padding="@dimen/_10sdp"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:text="Date Of Birth :"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_12sdp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txt_dob"
                    style="@style/TextLabel_error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/red">

                    <TextView
                        android:id="@+id/tv_dob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangle"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:hint="Select Date of Birth"
                        android:padding="@dimen/_10sdp"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_12sdp" />
                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_16sdp"
                    app:srcCompat="@drawable/ic_calendar_icon"
                    app:tint="@color/grey" />
            </RelativeLayout>

            <!--For Qualification-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:text="Qualification :"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_12sdp" />


            <LinearLayout
                android:id="@+id/ll_Qualification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingTop="@dimen/_8sdp"
                android:paddingRight="@dimen/_5sdp"
                android:paddingBottom="@dimen/_8sdp">

                <Spinner
                    android:id="@+id/spin_Qualification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:hint="Select Qualification"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txt_Qualification"
                style="@style/TextLabel_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/red" />


            <TextView
                android:id="@+id/tv_qualification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:text="Select Qualification"
                android:textColor="@color/red"
                android:textSize="@dimen/_12sdp"
                android:visibility="gone" />


            <!--For Poupulation-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:text="Poupulation :"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_12sdp" />


            <LinearLayout
                android:id="@+id/ll_Poupulation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingTop="@dimen/_8sdp"
                android:paddingRight="@dimen/_5sdp"
                android:paddingBottom="@dimen/_8sdp">

                <Spinner
                    android:id="@+id/spin_Poupulation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:hint="Select Poupulation"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txt_Poupulation"
                style="@style/TextLabel_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/red" />

            <TextView
                android:id="@+id/tv_Poupulation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:textColor="@color/red"
                android:textSize="@dimen/_12sdp"
                android:visibility="gone" />

            <!--For Shop Type-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:text="Shop Type :"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_12sdp" />


            <LinearLayout
                android:id="@+id/ll_ShopType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingTop="@dimen/_8sdp"
                android:paddingRight="@dimen/_5sdp"
                android:paddingBottom="@dimen/_8sdp">

                <Spinner
                    android:id="@+id/spin_ShopType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:hint="Select Shop Type"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txt_ShopType"
                style="@style/TextLabel_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/red" />

            <TextView
                android:id="@+id/tv_ShopType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:textColor="@color/red"
                android:textSize="@dimen/_12sdp"
                android:visibility="gone" />

            <!--For Bank-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:text="Bank :"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_12sdp" />


            <LinearLayout
                android:id="@+id/ll_Bank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingTop="@dimen/_8sdp"
                android:paddingRight="@dimen/_5sdp"
                android:paddingBottom="@dimen/_8sdp">

                <Spinner
                    android:id="@+id/spin_Bank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:hint="Select Bank"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txt_Bank"
                style="@style/TextLabel_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/red" />

            <TextView
                android:id="@+id/tv_Bank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:textColor="@color/red"
                android:textSize="@dimen/_12sdp"
                android:visibility="gone" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:text="Branch Name :"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_12sdp" />

            <EditText
                android:id="@+id/branchNameEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle"
                android:gravity="center_vertical"
                android:hint="Enter Branch Name"
                android:inputType="textCapCharacters"
                android:padding="@dimen/_10sdp"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="@dimen/_12sdp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:text="IFSC :"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_12sdp" />

            <EditText
                android:id="@+id/IFSCEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle"
                android:gravity="center_vertical"
                android:hint="Enter IFSC"
                android:inputType="textCapCharacters"
                android:padding="@dimen/_10sdp"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="@dimen/_12sdp" />


            <!--For LocationType-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:text="LocationType :"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_12sdp" />


            <LinearLayout
                android:id="@+id/ll_LocationType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingTop="@dimen/_8sdp"
                android:paddingRight="@dimen/_5sdp"
                android:paddingBottom="@dimen/_8sdp">

                <Spinner
                    android:id="@+id/spin_LocationType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:hint="Select LocationType"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txt_LocationType"
                style="@style/TextLabel_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/red" />

            <TextView
                android:id="@+id/tv_LocationType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:textColor="@color/red"
                android:textSize="@dimen/_12sdp"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:text="Landmark :"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_12sdp" />

            <EditText
                android:id="@+id/LandmarkEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle"
                android:gravity="center_vertical"
                android:hint="Enter Landmark"
                android:inputType="textCapCharacters"
                android:padding="@dimen/_10sdp"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="@dimen/_12sdp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:text="Account Number :"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_12sdp" />

            <EditText
                android:id="@+id/AccountNumberEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle"
                android:gravity="center_vertical"
                android:hint="Enter Account Number"
                android:inputType="number"
                android:padding="@dimen/_10sdp"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="@dimen/_12sdp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:text="Account Name :"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_12sdp" />

            <EditText
                android:id="@+id/AccountNameEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle"
                android:gravity="center_vertical"
                android:hint="Enter Account Name"
                android:inputType="textCapCharacters"
                android:padding="@dimen/_10sdp"
                android:text=""
                android:layout_marginBottom="@dimen/_15sdp"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_12sdp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/notice"
                style="@style/TextAppearance.AppCompat.Body2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:fontFamily="sans-serif-medium"
                android:padding="@dimen/_10sdp"
                android:visibility="visible"
                android:text="@string/profile_update_notice"
                android:textColor="@color/red" />


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/bottomBtnView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/submitBtn"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"

            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:enabled="true"
            android:fontFamily="sans-serif-medium"
            android:text="Update User"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:visibility="visible" />

        <Button
            android:id="@+id/kycBtn"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:enabled="true"
            android:fontFamily="sans-serif-medium"
            android:text="Update Kyc"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:visibility="visible" />

    </LinearLayout>
</RelativeLayout>
