<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp">

        <LinearLayout
            android:id="@+id/minMaxAdapterView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/colorPrimary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_chainStyle="spread"
            app:layout_constraintStart_toEndOf="@+id/maxCommView"
            app:layout_constraintEnd_toStartOf="@+id/commAdapterView"
            app:layout_constraintHorizontal_chainStyle="packed">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_minMax"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Range "
                android:fontFamily="sans-serif"
                android:textColor="@color/grey"
                android:textStyle="bold"
                android:gravity="center"
                android:lines="2"
                android:background="@color/white"
                android:layout_marginLeft="@dimen/_1sdp"
                android:layout_marginRight="@dimen/_1sdp"
                android:textSize="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/commAdapterView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/colorPrimary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_chainStyle="spread"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@+id/minMaxAdapterView"
            app:layout_constraintEnd_toStartOf="@+id/fixedCommView"
            >
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_comm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Comm\nSurcharge "
                android:fontFamily="sans-serif"
                android:textColor="@color/grey"
                android:textStyle="bold"
                android:gravity="center"
                android:lines="2"
                android:background="@color/white"
                android:layout_marginRight="@dimen/_1sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                android:textSize="@dimen/_12sdp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/maxCommView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/colorPrimary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_chainStyle="spread"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/minMaxAdapterView"
            >
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_maxComm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Max Commission "
                android:fontFamily="sans-serif"
                android:textColor="@color/grey"
                android:textStyle="bold"
                android:gravity="center"
                android:lines="2"
                android:background="@color/white"
                android:layout_marginRight="@dimen/_1sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                android:textSize="@dimen/_12sdp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fixedCommView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/colorPrimary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_chainStyle="spread"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/commAdapterView"
            app:layout_constraintHorizontal_chainStyle="packed">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_fixedComm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Fixed Commission "
                android:fontFamily="sans-serif"
                android:textColor="@color/grey"
                android:textStyle="bold"
                android:gravity="center"
                android:lines="2"
                android:background="@color/white"
                android:textSize="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                android:layout_marginRight="@dimen/_1sdp"
                />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>