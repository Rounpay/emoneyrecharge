<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_second" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:adjustViewBounds="true"
                android:src="@drawable/pan" />


            <Button
                android:id="@+id/btn_panLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/rounded_accent_border"
                android:text="LOGIN TO UTI PORTAL"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                style="@style/TextAppearance.AppCompat.Body2"  />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_purchaseToken"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/rounded_accent"
                    android:backgroundTint="@color/colorAccent"
                    android:fontFamily="sans-serif-medium"
                    android:minWidth="@dimen/_120sdp"
                    android:layout_margin="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_12sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingRight="@dimen/_12sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:text="Purchase Token"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    style="@style/TextAppearance.AppCompat.Body2" />

                <Button
                    android:id="@+id/btn_viewCredential"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@drawable/rounded_accent"
                    android:fontFamily="sans-serif-medium"
                    android:minWidth="@dimen/_120sdp"
                    android:paddingLeft="@dimen/_12sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingRight="@dimen/_12sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:text="View Credentials"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    style="@style/TextAppearance.AppCompat.Body2"
                    app:backgroundTint="@color/colorPrimaryDark" />
            </RelativeLayout>

           <!-- <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Important T&amp;Cs:"
                android:textColor="@color/color_grey"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/black" />-->


            <WebView
                android:id="@+id/t_n_c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/grey" />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/uti" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
