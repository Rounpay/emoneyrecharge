<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusableInTouchMode="true"
    app:cardCornerRadius="@dimen/_8sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_10sdp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/closeIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            app:srcCompat="@drawable/ic_close_black_24dp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivMsg"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            app:srcCompat="@drawable/ic_pending_black_24dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/titleTv"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivMsg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="Upgrade Package"
            android:textColor="@android:color/holo_red_dark" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/msg"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleTv"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:text=" Dear Customer, You are not eligible to use this service. Please upgrade to use this service."/>
<!--\n
प्रिय विक्रेता इस सेवा के उपयोग के लिए आप अधिकृत नहीं है इस सेवा को Active करने के लिए अपना पैकेज upgrade करें या निम्न फ़ोन पर संपर्क करें" -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/conatctTv"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/msg"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_6sdp"
            android:autoLink="all"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btnUpgrade"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/conatctTv"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginBottom="@dimen/_6sdp"
            android:background="@drawable/rounded_primary_border"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:text="Upgrade Package"
            android:textColor="@color/colorPrimary" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
