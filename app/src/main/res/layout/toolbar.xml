<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    app:titleTextColor="@color/white">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/walletIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_rupee_circle"
            app:tint="@android:color/white" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_toRightOf="@+id/walletIcon"
            android:gravity="center"
            android:text="Title"
            android:textColor="@android:color/white"
            android:textStyle="bold" />


        <FrameLayout
            android:id="@+id/notificationView"
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_32sdp"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_toLeftOf="@+id/reports">

            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_notifications_white_24dp"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/badgesNotification"
                android:layout_width="@dimen/_14sdp"
                android:layout_height="@dimen/_14sdp"
                android:layout_gravity="right"

                android:layout_marginRight="@dimen/_3sdp"
                android:background="@drawable/red_circle"
                android:elevation="@dimen/_3sdp"
                android:gravity="center"
                android:padding="@dimen/_1sdp"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="@dimen/_6sdp"
                android:textStyle="bold"
                android:visibility="gone"
                app:backgroundTint="@color/reddishBrown" />
        </FrameLayout>

        <ImageView
            android:id="@+id/reports"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_15sdp"
            app:srcCompat="@drawable/ic_statistics" />
    </RelativeLayout>
</androidx.appcompat.widget.Toolbar>

