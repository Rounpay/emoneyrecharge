    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/searchContainerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/appBarLayout">

        <RelativeLayout
            android:id="@+id/searchContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp">

            <RelativeLayout
                android:id="@+id/numberSearchLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/style_color_primary">

                <EditText
                    android:id="@+id/numberSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1px"
                    android:background="@color/white"
                    android:hint="Mobile Number"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textSize="@dimen/_14sdp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/filterDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/numberSearchLayout"
                android:layout_marginTop="1px"
                android:layout_marginBottom="1px"
                android:layout_toLeftOf="@+id/searchLayout"
                android:background="@color/style_color_primary"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:id="@+id/fromDateLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/style_color_primary">

                    <TextView
                        android:id="@+id/fromDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1px"
                        android:background="@color/white"
                        android:gravity="center"
                        android:hint="From date"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/toDateLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/style_color_primary">

                    <TextView
                        android:id="@+id/toDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1px"
                        android:layout_marginRight="1px"
                        android:background="@color/white"
                        android:gravity="center"
                        android:hint="To date"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/childSearchLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/filterDate"
                android:background="@color/style_color_primary">

                <EditText
                    android:id="@+id/childSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1px"
                    android:background="@color/white"
                    android:hint="Child  Number"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textSize="@dimen/_14sdp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/searchLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/numberSearchLayout"
                android:layout_alignParentRight="true"
                android:background="@color/white"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_search_icon" />

            </RelativeLayout>

        </RelativeLayout>

        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/searchContainer"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/rect"
            android:searchIcon="@drawable/ic_musica_searcher"
            android:visibility="gone"></androidx.appcompat.widget.SearchView>
        <RadioGroup
            android:id="@+id/rg_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/fd_req"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REQUESTED"
                />
            <RadioButton
                android:id="@+id/fd_acc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ACCEPTED"/>
            <RadioButton
                android:id="@+id/fd_rej"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REJECTED"/>
        </RadioGroup>
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/searchContainerView"
        android:layout_marginTop="5dp"
        android:background="@color/back_bg"
        android:scrollbars="vertical" />

    <ImageView
        android:id="@+id/noData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/nodata"
        android:visibility="gone" />


</RelativeLayout>