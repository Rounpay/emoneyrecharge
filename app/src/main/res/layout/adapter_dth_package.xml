<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:background="@color/white"
    android:elevation="1dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/_5sdp"
    android:paddingTop="@dimen/_8sdp"
    android:paddingRight="@dimen/_5sdp"
    android:paddingBottom="@dimen/_8sdp">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2.3"
        android:background="@drawable/rect"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/amount"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/colorPrimary" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_grey" />

        <TextView
            android:id="@+id/validityLabel"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:text="Validity"
            android:textColor="@color/grey" />

        <TextView
            android:id="@+id/validity"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/validityLabel"
            android:layout_marginBottom="@dimen/_5sdp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="0 Days"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/descriptionLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:layout_weight="7.7"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/descriptionLabel"
            android:layout_marginBottom="@dimen/_3sdp"
            android:layout_toRightOf="@+id/opImage"
            android:fontFamily="sans-serif-medium"
            android:text=""
            android:textColor="@color/black" />


        <TextView
            android:id="@+id/description"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/descriptionLabel"
            android:layout_toRightOf="@+id/opImage"
            android:fontFamily="sans-serif-medium"
            android:text=""
            android:textColor="@color/black" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bookngAmt"
                style="@style/TextAppearance.Compat.Notification.Info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/descriptionLabel"
                android:layout_toLeftOf="@+id/viewChannel"
                android:layout_toRightOf="@+id/opImage"
                android:fontFamily="sans-serif-medium"
                android:text=""
                android:textColor="@color/green" />

            <TextView
                android:id="@+id/viewChannel"
                style="@style/TextAppearance.Compat.Notification.Info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/descriptionLabel"
                android:layout_alignParentRight="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingRight="@dimen/_3sdp"
                android:paddingLeft="@dimen/_3sdp"
                android:layout_toRightOf="@+id/opImage"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="@string/view_channel"
                android:textColor="@color/blue" />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>