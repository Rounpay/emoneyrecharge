<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rect"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp">

        <LinearLayout
            android:id="@+id/billDetailContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            android:background="@color/colorPrimary">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/AppShapeAppearance.LargeComponent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bill Detail"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/black"
                android:background="@color/white"/>

            <LinearLayout
                android:id="@+id/customerNameView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_marginBottom="@dimen/_1sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/AppShapeAppearance.MediumComponent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Consumer Name"
                    android:textColor="@color/colorPrimary"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/consumerName"
                    style="@style/AppShapeAppearance.MediumComponent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Bill Detail"
                    android:textColor="@color/colorPrimary"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/billNumberView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_marginBottom="@dimen/_1sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/AppShapeAppearance.MediumComponent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Consumer Number"
                    android:textColor="@color/colorPrimary"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/consumerNum"
                    style="@style/AppShapeAppearance.MediumComponent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Bill Detail"
                    android:textColor="@color/colorPrimary"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/billDateView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_marginBottom="@dimen/_1sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Bill Date"
                    android:textColor="@color/colorPrimary"
                    style="@style/AppShapeAppearance.MediumComponent"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/billDate"
                    style="@style/AppShapeAppearance.MediumComponent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Bill Detail"
                    android:textColor="@color/colorPrimary"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/dueDateView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_marginBottom="@dimen/_1sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:textColor="@color/colorPrimary"
                    style="@style/AppShapeAppearance.MediumComponent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Due Date" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/dueDate"
                    android:textColor="@color/colorPrimary"
                    style="@style/AppShapeAppearance.MediumComponent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="NA" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/billPeriodView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_marginBottom="@dimen/_1sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:textColor="@color/colorPrimary"
                    style="@style/AppShapeAppearance.MediumComponent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Bill Period" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/billPeriod"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="NA"
                    android:textColor="@color/colorPrimary"
                    style="@style/AppShapeAppearance.MediumComponent"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/payableAmtView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:orientation="vertical"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Payable Amount"
                        android:textColor="@color/colorPrimary"
                        style="@style/AppShapeAppearance.MediumComponent"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/payableAmt"
                        style="@style/TextAppearance.AppCompat.Body2"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_weight=".5"
                        android:text="NA"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:background="@color/colorPrimaryDark"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/payableAmtMore"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:gravity="right"
                        android:textStyle="bold"
                        android:text="Options "
                        android:textColor="@color/colorPrimary"
                        style="@style/AppShapeAppearance.MediumComponent"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/amountOptionView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@color/white">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_1sdp"
                        android:background="@drawable/rect_white_style">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/infoHeaderView"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:background="@color/colorAccent"
                            app:layout_constraintTop_toTopOf="parent">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/infoNameTv"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text="Name"
                                android:textColor="@color/colorAccent"
                                android:textStyle="bold"
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                                android:gravity="center"
                                android:background="@color/white"
                                android:layout_marginEnd="@dimen/_1sdp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/infoValueTv"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/infoValueTv"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text=" Amount Value"
                                android:textColor="@color/colorAccent"
                                android:textStyle="bold"
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                                android:gravity="center"
                                android:background="@color/white"
                                android:layout_marginStart="@dimen/_1sdp"
                                app:layout_constraintStart_toEndOf="@+id/infoNameTv"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/amountOptionListRv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_1sdp"
                            android:layout_marginBottom="@dimen/_1sdp"
                            android:layout_marginStart="@dimen/_1sdp"
                            android:layout_marginEnd="@dimen/_1sdp"
                            app:layout_constraintTop_toBottomOf="@+id/infoHeaderView"/>
                        <ViewAnimator
                            android:id="@+id/view2"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/white"
                            app:layout_constraintTop_toBottomOf="@+id/amountOptionListRv"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:background="@color/white"
                >
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/additionalInfoBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="Additional Information"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:padding="@dimen/_10sdp"
                    android:background="@drawable/additional_button_style"
                    />
            </LinearLayout>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/errorMsgBilldetail"
            style="@style/AppShapeAppearance.LargeComponent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="error Msg"
            android:textColor="@color/red"/>

    </LinearLayout>

</LinearLayout>