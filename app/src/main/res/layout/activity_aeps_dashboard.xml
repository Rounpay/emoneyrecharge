<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_0"
    android:orientation="vertical">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/toolbar_second" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_15sdp"
                android:src="@drawable/aeps_logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/deviceView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextAppearance.AppCompat.Body2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:text="Select Device :"
                        android:textColor="@color/colorPrimary" />


                    <RelativeLayout
                        android:id="@+id/deviceTypeChooserView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:background="@drawable/edittext_bg"
                        android:foreground="?attr/selectableItemBackgroundBorderless">

                        <TextView
                            android:id="@+id/deviceType"
                            style="@style/TextAppearance.AppCompat.Body2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/deviceTypeArrow"
                            android:background="@android:color/transparent"
                            android:ellipsize="end"
                            android:focusable="false"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:gravity="center_vertical"
                            android:hint="Select Type"
                            android:padding="@dimen/_12sdp"
                            android:singleLine="true"
                            android:text="Mantra"
                            android:textColor="@android:color/black"
                            android:textColorHint="@android:color/darker_gray" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/deviceTypeArrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_5sdp"
                            app:srcCompat="@drawable/ic_keyboard_arrow_down_black_24dp"
                            app:tint="@color/colorPrimary" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextAppearance.AppCompat.Body2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:text="Select Transaction :"
                        android:textColor="@color/colorPrimary" />


                    <RelativeLayout
                        android:id="@+id/transactionTypeChooserView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:background="@drawable/edittext_bg"
                        android:foreground="?attr/selectableItemBackgroundBorderless">

                        <TextView
                            android:id="@+id/transactionType"
                            style="@style/TextAppearance.AppCompat.Body2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/transactionTypeArrow"
                            android:background="@android:color/transparent"
                            android:ellipsize="end"
                            android:focusable="false"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:gravity="center_vertical"
                            android:hint="Select Type"
                            android:padding="@dimen/_12sdp"
                            android:singleLine="true"
                            android:text="Withdrawal"
                            android:textColor="@android:color/black"
                            android:textColorHint="@android:color/darker_gray" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/transactionTypeArrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_5sdp"
                            app:srcCompat="@drawable/ic_keyboard_arrow_down_black_24dp"
                            app:tint="@color/colorPrimary" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

