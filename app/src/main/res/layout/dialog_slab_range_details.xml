<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_10sdp"
        android:padding="@dimen/_5sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_6sdp">

            <ImageView
                android:id="@+id/iv_cancleView"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                app:srcCompat="@drawable/ic_cancel_black_24dp"
                android:layout_alignParentRight="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/slab_range_details"
                android:layout_toLeftOf="@+id/iv_cancleView"
                android:layout_alignParentLeft="true"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/grey"/>

        <RelativeLayout
            android:id="@+id/operatorView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp">

            <ImageView
                android:id="@+id/iv_opImage"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                app:srcCompat="@drawable/nodata"
                android:layout_alignParentLeft="true"
                />

            <TextView
                android:id="@+id/tv_opName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/slab_range_details"
                android:layout_toRightOf="@+id/iv_opImage"
                android:fontFamily="sans-serif"
                android:textColor="@color/red"
                android:textSize="@dimen/_14sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                />

            <TextView
                android:id="@+id/tv_opRange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/slab_range_details"
                android:layout_toRightOf="@+id/iv_opImage"
                android:layout_below="@+id/tv_opName"
                android:fontFamily="sans-serif"
                android:textColor="@color/grey"
                android:textSize="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                />

        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/slab_range_details_style">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:padding="@dimen/_2sdp">
                <LinearLayout
                    android:id="@+id/maxCommView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@color/colorPrimary"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/minMaxRangeView"
                    app:layout_constraintHorizontal_chainStyle="packed">
                    <TextView
                        android:id="@+id/maxCommissionLabelTv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Max Commission"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:background="@color/white"
                        android:layout_marginRight="@dimen/_1sdp"
                        android:layout_marginBottom="@dimen/_1sdp"
                        android:textSize="@dimen/_12sdp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/minMaxRangeView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@color/colorPrimary"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/maxCommView"
                    app:layout_constraintEnd_toStartOf="@+id/commView"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Range \n (Min - Max )"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:background="@color/white"
                        android:layout_marginRight="@dimen/_1sdp"
                        android:layout_marginBottom="@dimen/_1sdp"
                        android:textSize="@dimen/_12sdp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/commView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@color/colorPrimary"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/fixedCommView"
                    app:layout_constraintStart_toEndOf="@+id/minMaxRangeView"
                    app:layout_constraintHorizontal_chainStyle="packed">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Commission "
                        android:fontFamily="sans-serif"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:background="@color/white"
                        android:layout_marginRight="@dimen/_1sdp"
                        android:layout_marginBottom="@dimen/_1sdp"
                        android:textSize="@dimen/_12sdp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fixedCommView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@color/colorPrimary"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/commView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_chainStyle="packed">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Fixed Commission "
                        android:fontFamily="sans-serif"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:background="@color/white"
                        android:layout_marginBottom="@dimen/_1sdp"
                        android:textSize="@dimen/_12sdp"
                        />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_slabRange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:padding="@dimen/_5sdp"
                tools:listitem="@layout/adapter_slab_range_details"/>

        </LinearLayout>


    </LinearLayout>



</RelativeLayout>