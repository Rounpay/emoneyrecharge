<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_bg"
    tools:context=".Aeps.UI.AEPSReportActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_second" />

    <RelativeLayout
        android:id="@+id/searchContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_margin="2dp"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/numberSearchLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/style_color_primary">

            <EditText
                android:id="@+id/numberSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1px"
                android:background="@color/white"
                android:hint="Mobile Number"
                android:inputType="number"
                android:padding="10dp"
                android:textSize="@dimen/_14sdp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/filterDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/numberSearchLayout"
            android:layout_marginTop="1px"
            android:layout_marginBottom="1px"
            android:layout_toLeftOf="@+id/searchLayout"
            android:background="@color/style_color_primary"
            android:orientation="horizontal"
            android:weightSum="2">

            <RelativeLayout
                android:id="@+id/fromDateLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/style_color_primary">

                <TextView
                    android:id="@+id/fromDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1px"
                    android:background="@color/white"
                    android:gravity="center"
                    android:hint="From date"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/toDateLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/style_color_primary">

                <TextView
                    android:id="@+id/toDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1px"
                    android:layout_marginRight="1px"
                    android:background="@color/white"
                    android:gravity="center"
                    android:hint="To date"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/childSearchLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/filterDate"
            android:background="@color/style_color_primary">

            <EditText
                android:id="@+id/childSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1px"
                android:background="@color/white"
                android:hint="Child  Number"
                android:inputType="number"
                android:padding="10dp"
                android:textSize="@dimen/_14sdp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/searchLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/numberSearchLayout"
            android:layout_alignParentRight="true"
            android:background="@color/white"
            android:padding="10dp">

            <ImageView
                android:id="@+id/search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_search_icon" />

        </RelativeLayout>

    </RelativeLayout>

    <androidx.appcompat.widget.SearchView
        android:id="@+id/search_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchContainer"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/rect"
        android:searchIcon="@drawable/ic_musica_searcher"
        android:visibility="visible"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/search_all"

        android:background="@color/back_bg"
        android:scrollbars="vertical" />

    <ImageView
        android:id="@+id/noData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/nodata"
        android:visibility="gone" />

</RelativeLayout>